{% extends 'MyMainBundle::layout.html.twig' %}

{% block navbar %}
<li>
    <a>
        {{ game.name }}

        <button id="map-refresh" class="btn btn-xs">refresh</button>
    </a>
</li>

{% endblock %}

{% block content %}

<div class="map-status" style="background: {{ player.color }}">
    <div class="map-status-inner-wrapper" style="display: none">
        <span class="status-bases"></span> bases |
        <span class="status-fleets"></span> fleets | 
        <span class="status-ships"></span> ships 
        (+<span class="status-production"></span> /turn)
    </div>
</div>
<div class="map-wrapper">
    <div id="map-container" class="map-container" style="
        width: {{ map.width + 100}}px;
        height: {{ map.width + 150}}px;
    "></div>

    <div id="game-panel" class="game-panel">&nbsp;</div>
</div>

{% endblock %}

{% block jsTemplates %}
{% verbatim %}

<script id="tpl-base-panel" type="test/x-handlebars-template">
    <div class='panel-base'>
        <h2 class='base-name' {{#if player}}style='color: {{ player.color }}'{{/if}}>
            {{ name }}
        </h2>
        <p class='lead player-name' {{#if player}}style='color: {{ player.color }}'{{/if}}>
            <i>{{ player.name }}</i>
        </p>

        <hr>
        <p>
            Resources: {{ resources }}<br>
            Production: {{ production }}
        </p>
        <p>
            Total ships: {{ totalPower }}
            <br>Garrisoned ships: {{ power }}
            {{#if owned}}
                {{#if power}}
                    <a href="javascript: void(0)" data-base="{{ id }}" class="control control-fleet-create">make fleet</a>
                {{/if}}

                {{!--
                {{#if totalPower}}
                    <button type="button" data-base="{{ id }}" class="control control-fleet-merge">
                        merge fleets & garrison
                    </button>
                {{/if}}
                --}}
            {{/if}}

        </p>

        {{#if orbiting}}
            {{#if owned}}

            <hr>
            <p class='lead'>
                {{ fleetPower }} ships in 
                {{ fleetCount }} fleets
            </p>
            <ul class='list-unstyled fleets-list'>
                {{#each orbiting}}
                <li>
                    <label>
                        <input type='checkbox' class='fleet-check' value='{{ this.id }}'>
                        {{ this.power }} ships

                        {{#if this.destination}}
                        - leaving for {{basename this.destination }}
                        {{/if}}
                    </label>
                </li>
                {{/each}}
            </ul>
            <div class='fleet-control' style='display: none;'>
                With selected fleets... <br>

                <button data-base='{{ id }}' class='btn btn-xs fleet-station'>garrison</button>
                <select data-base='{{ id }}' class='fleet-move'>
                    <option value=''>move to...</option>

                    {{#each inFleetRange}}
                        <option 
                            class="fleet-select-destination" 
                            value="{{ this.id }}"
                        >{{ this.name }} ({{ this.distance }})</option>
                    {{/each}}
                </select>
            </div>
            {{/if}}
        {{/if}}

        {{#if inbound}}

        <hr>
        <p class='lead'>
            {{ inbound.length }} inbound fleets
        </p>
        <ul class='list-unstyled fleets-list'>
            {{#each inbound}}
            <li style='color: {{ this.player.color }};'>
                <strong>{{ this.power }}</strong> ships 
                {{ this.timeleft }}s away 
                ({{ this.player.name }})
            </li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
</script>

{% endverbatim %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var gameId = {{ game.id }};
        var playerId = {{ player.id }};
    </script>
    {% javascripts
        '@MyMainBundle/Resources/public/js/raphael-min.js'
        '@MyMainBundle/Resources/public/js/raphael.boolean.js'
        '@MyMainBundle/Resources/public/js/moment.min.js'
        '@MyMainBundle/Resources/public/js/handlebars.js'
        '@MyMainBundle/Resources/public/js/game.map.js'
        output='/compiled/js/game.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}